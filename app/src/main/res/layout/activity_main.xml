<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!--
        textview de cuantas notas se tienen
        EditText donde el usuario capture la nota
        botón para guardar la nota
        TextView (multi línea) que muestre un listado
            con las notas
        botón para limpiar las notas
    -->

    <!-- toolbar para darle style B)-->
    <Toolbar
        android:id="@+id/toolbar"
        android:background="#b2e2f2"
        android:theme="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:titleTextColor="@color/white"
        android:layout_height="?attr/actionBarSize"
    />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="20px"
        android:layout_height="20px"
        android:src="@drawable/note"
        />

    <TextView
        android:id="@+id/textconteo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

    <EditText
        android:id="@+id/textnota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/b_limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/text_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

</RelativeLayout>